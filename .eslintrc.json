{
  "env": {
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:ft-flow/recommended",
  ],
  "parser": "hermes-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": ["ft-flow"],
  "root": true,
  "rules": {
    "brace-style": [1, "stroustrup", { "allowSingleLine": true }],
    "indent": [1, 2]
  }
}
